# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Static pages
GET         /                    controllers.Application.index()
GET         /about               controllers.Application.about()
GET         /help                controllers.Application.help()
GET         /contact             controllers.Application.contact()

GET         /oldindex            controllers.Application.oldIndex()
GET         /encrypt             controllers.Application.encrypt(pw)
GET         /matches             controllers.Application.matches(pw)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

# User pages
GET         /login               controllers.UserController.loginForm()
GET         /register            controllers.UserController.registerForm()
POST        /login               controllers.UserController.login()
POST        /register            controllers.UserController.register()
GET         /users?id=:id        controllers.UserController.showUser(id: String)
GET         /users               controllers.UserController.showAllUsers()